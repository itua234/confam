<div class="" id="step2">
    <div class="text-center mb-4">
        <h3>Identity Verification</h3>
    </div>

    <div class="mb-3">
        <label class="form-label">Verification Type</label>
        <select class="form-select" id="verificationType">
            <option value="nin">NIN (National Identity Number)</option>
            <option value="bvn">BVN (Bank Verification Number)</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Enter Number</label>
        <input type="text" class="form-control" id="verificationNumber" placeholder="Enter NIN/BVN number">
    </div>

    <div class="mb-3">
        <label class="form-label">Government ID Type</label>
        <select class="form-select" id="idType">
            <option value="">Select ID Type</option>
            <option value="passport">International Passport</option>
            <option value="drivers">Driver's License</option>
            <option value="national">National ID Card</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Upload ID Document</label>
        <input type="file" class="form-control" id="idDocument" accept="image/*,.pdf">
    </div>

    <div class="mb-4">
        <label class="form-label">Residential Address</label>
        <textarea class="form-control" id="address" rows="2" placeholder="Enter your full address"></textarea>
    </div>

    <button class="link-button">Continue</button>
</div>