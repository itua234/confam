    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "fs": "^0.0.1-security",
    "helmet": "^8.1.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.14.0",
    "node-cron": "^3.0.3",
    "node-input-validator": "^4.5.1",
    "nodemailer": "^6.10.0",
    "nodemon": "^3.1.10",
    "path": "^0.12.7",
    "pm2": "^6.0.5",
    "redis": "^4.7.0",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.0",
    "uuid": "^11.1.0"
  },
  "_moduleAliases": {
